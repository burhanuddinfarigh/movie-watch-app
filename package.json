{
  "name": "movie-watch-together",
  "version": "1.0.0",
  "description": "A minimalist desktop app for watching movies together with high-quality screen and audio sharing",
  "main": "main.js",
  "homepage": "https://github.com/yourname/movie-watch-together",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --dev --no-sandbox",
    "build": "electron-builder --publish=never",
    "build:win": "electron-builder --win --publish=never",
    "build:mac": "electron-builder --mac --publish=never",
    "build:all": "electron-builder --win --mac --publish=never",
    "pack": "electron-builder --dir",
    "dist": "yarn build"
  },
  "keywords": [
    "electron",
    "webrtc",
    "screen-sharing",
    "movie-watching",
    "peer-to-peer"
  ],
  "author": {
    "name": "Movie Watch Together",
    "email": "support@moviewatch.com"
  },
  "license": "MIT",
  "dependencies": {
    
    "peerjs": "^1.5.2"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "electron": "^28.0.0"
  },
  "build": {
    "appId": "com.moviewatch.together",
    "productName": "Movie Watch Together",
    "copyright": "Copyright Â© 2024 Movie Watch Together",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "pip.html",
      "style.css",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": ".",
        "to": ".",
        "filter": ["*.md", "LICENSE"]
      }
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Movie Watch Together",
      "icon": "build/icon.icns",
      "background": "build/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "publisherName": "Movie Watch Together",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Movie Watch Together"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Network"
    }
  }
}